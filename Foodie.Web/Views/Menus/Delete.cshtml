@model Foodie.Models.ViewModels.Menus.MenuViewModel

@{
    ViewData["Title"] = "Delete Menu";
}

<h1>Delete Menu</h1>

<div class="alert alert-warning">
    Are you sure you want to delete this menu?
</div>

<div class="card">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Active From</dt>
            <dd class="col-sm-9">@Model.ActiveFrom.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-3">Active To</dt>
            <dd class="col-sm-9">@(Model.ActiveTo.HasValue ? Model.ActiveTo.Value.ToString("yyyy-MM-dd") : "-")</dd>

            <dt class="col-sm-3">Restaurant</dt>
            <dd class="col-sm-9">@Model.RestaurantName</dd>
        </dl>
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post" class="mt-3">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
