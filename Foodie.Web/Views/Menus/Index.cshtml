@model IEnumerable<Foodie.Models.ViewModels.Menus.MenuViewModel>

@{
    ViewData["Title"] = "Menus";
}

<h1>Menus</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create Menu</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Active From</th>
            <th>Active To</th>
            <th>Restaurant</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.ActiveFrom.ToString("yyyy-MM-dd")</td>
                <td>@(item.ActiveTo.HasValue ? item.ActiveTo.Value.ToString("yyyy-MM-dd") : "-")</td>
                <td>@item.RestaurantName</td>
                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
